{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "**/build/**",
    "**/dist**/",
    "**/node_modules**/",
    "!src/**/*.test.tsx",
    "!src/**/*.stories.tsx"
  ],
  "coverageReporters": ["lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 40,
      "functions": 40,
      "lines": 40,
      "statements": -10
    }
  },
  "verbose": true
}
